<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="true">
  <display-name>Footprint</display-name>

  <context-param>
    <param-name>approot</param-name>
    <param-value>/home/botian/Documents/CIT594/Footprint</param-value>
  </context-param>

  <context-param>
    <param-name>dbroot</param-name>
    <param-value>/home/botian/Documents/CIT594/Footprint/storage</param-value>
  </context-param>   

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlets.LoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>servlets.HomeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>BlogServlet</servlet-name>
    <servlet-class>servlets.BlogServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BlogServlet</servlet-name>
    <url-pattern>/blog/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ExploreServlet</servlet-name>
    <servlet-class>servlets.ExploreServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExploreServlet</servlet-name>
    <url-pattern>/explore/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ArticleServlet</servlet-name>
    <servlet-class>servlets.ArticleServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ArticleServlet</servlet-name>
    <url-pattern>/article/*</url-pattern>
  </servlet-mapping>

</web-app>

